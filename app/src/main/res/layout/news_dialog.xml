<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0sp"
    android:layout_margin="0dp"
    android:backgroundTint="@color/grey">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0sp"
        android:layout_margin="0sp">
        <ImageView
            android:id="@+id/dialogImage"
            android:layout_width="fill_parent"
            android:adjustViewBounds="true"
            android:layout_height="200sp"
            android:padding="0sp"
            android:layout_margin="0sp"/>
        <TextView
            android:id="@+id/dialogHeadline"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="8sp"
            android:textSize="18sp"
            />
        <View
            android:layout_marginTop="5sp"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#C3B5D6"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:weightSum="2">
                <ImageButton
                    android:id="@+id/twitterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_twitter_logo_dialog"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:contentDescription="Share with twitter"
                    />

                <View
                    android:layout_marginLeft="20sp"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:paddingTop="0dp"
                    android:layout_marginTop="0dp"
                    android:background="#C3B5D6"
                    android:layout_marginRight="20sp"/>

                <ImageButton
                    android:id="@+id/chromeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chrome"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:contentDescription="Open in Chrome"
                    />
            </TableRow>
        </TableLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#C3B5D6"/>
    </LinearLayout>

</RelativeLayout>